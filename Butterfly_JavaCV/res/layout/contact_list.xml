<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:text="@string/hint"
        android:textSize="12sp"
        android:padding="5dp"
        android:lines="1"
        />
    <AutoCompleteTextView
        android:layout_below="@id/hint"
        android:id="@+id/autoCompleteTextView"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/write_contact_name_or_email_addr" 
        android:lines="1"
        />

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/start_broadcast_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_record"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/autoCompleteTextView"
     	android:layout_alignBottom="@id/autoCompleteTextView"
     	android:padding="3dp"
     	android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/broadcast_live"/>

    <ListView
        android:id="@+id/selectedContactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/autoCompleteTextView"
         >
    </ListView>

</RelativeLayout>